function vCampos(el, er) {
	var e = $(el).val().replace(er, '');
	$(el).val(e);
}

function num(el) {
	vCampos(el, /[^0-9]/g);
}

function maskTel(el) {
	vCampos(el, /[^0-9\-]/g);
	var e = $(el).val();
	var n = "(";
	for (i = 0; i < e.length; i++) {
		if (i <= 2) {
			n += e.charAt(i);
		}
		if (i == 2) {
			n += ") 9 ";
		}
		if (i > 2 && i >= 6) {
			n += e.charAt(i);
		}
	}
	$(el).val(n);
}

function maskCpf(el) {
	vCampos(el, /[^0-9\.-]/g);
	var e = $(el).val();
	if (e.length == 3) {
		$(el).val(e + '.');
	}
	if (e.length == 7) {
		$(el).val(e + '.');
	}
	if (e.length == 11) {
		$(el).val(e + '-');
	}
}
