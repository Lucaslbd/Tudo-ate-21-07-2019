function vCampos(el, er) {
	var e = $(el).val().replace(er, '');
	$(el).val(e);
}

function num(el) {
	vCampos(el, /[^0-9]/g);
}

function maskTel(el) {
	vCampos(el, /[^0-9\-() ]/g);
	var e = $(el).val();
	if (e.length == 4) {
		$(el).val(e + ') 9 ');
	}
	if (e.length == 12) {
		$(el).val(e + '-');
	}
	if (e.length == 1) {
		var t = "(";
		$(el).val(t + e);
	}
}

function maskCpf(el) {
	vCampos(el, /[^0-9\.-]/g);
	var e = $(el).val();
	if (e.length == 3) {
		$(el).val(e + '.');
	}
	if (e.length == 7) {
		$(el).val(e + '.');
	}
	if (e.length == 11) {
		$(el).val(e + '-');
	}
}
